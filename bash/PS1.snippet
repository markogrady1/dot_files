
is_branch() {
     git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ on/'
}

parse_git_branch() {
     git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ \1/'
}

export PS1="╭─ \[\033[01;36m\]\u@\h\[\033[00m\]:\[\033[01;32m\]\w\[\033[00m\]\[\033[01;37m\]\$(is_branch)\[\033[33m\]\$(parse_git_branch)\[\033[00m\]\n╰─ \[\033[1;34m\]\t\[\033[00m\] \$ "

